  <?php
  
  // メーラーインスタンス作成
  $mailer = new PHPMailer();

  /// 文字コード
  $mailer->CharSet = 'UTF-8';
  $mailer->Encoding = '7bit';

  /// SMTPサーバーを利用する
  $mailer->IsSMTP();
  $mailer->SMTPAuth = true;

  /// SMTPサーバー
  $mailer->Host = 'smtp.gmail.com ';
  /// 送信元のユーザー名
  $mailer->Username = 'sssm6387@gmail.com';
  /// 送信元のパスワード
  $mailer->Password = 'imbdqwtihdmzlpeh';
  /// ポート番号
  $mailer->Port = 587;

  /// 送信元メルアド
  $mailer->From = 'sssm6387@gmail.com';
  /// 送信者名
  $mailer->FromName = 'テスト送信';

  /// 送信先と件名・本文を設定してテスト送信
  /// 送信先アドレス
  $mailer->addAddress("ixciron@yahoo.co.jp");
  /// メール件名
  $mailer->Subject = 'テスト送信';
  /// メール本文
  $mailer->Body = 'こんにちは、テスト送信です。';
  /// メール送信
  $result = $mailer->send();

  if ($result) {
    print_r('送信成功！！');
  } else {
    print_r('送信エラー');
    /// エラー内容全出力
    var_export($mailer->ErrorInfo);
  }